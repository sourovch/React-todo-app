datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String   @id @default(cuid())
  name            String   @default("")
  email           String   @unique @default("")
  password        String
  todos           Todo[]   @relation("User_todos")
  folders         folder[] @relation("User_folders")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_id        String?
}

model folder {
  id                String @id @default(cuid())
  name              String @default("")
  todos             Todo[] @relation("folder_todos")
  from_User_folders User[] @relation("User_folders")
}

model Todo {
  id                String    @id @default(cuid())
  task              String    @default("")
  isDone            Boolean   @default(false)
  due               DateTime?
  createdAt         DateTime? @default(now())
  from_User_todos   User[]    @relation("User_todos")
  from_folder_todos folder[]  @relation("folder_todos")
}
